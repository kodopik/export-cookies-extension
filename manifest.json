{
  "manifest_version": 3,
  "name": "Export Cookies",
  "version": "1.0",
  "description": "Export all cookies to a cookies.txt file in Netscape format",
  "permissions": [
    "cookies",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

